{
  "name": "hugo-boilerplate",
  "version": "1.0.0",
  "description": "A clean and minimal Hugo boilerplate project that can be used as a starting point for other Hugo projects.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "hugo server",
    "build": "hugo --minify",
    "build:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css",
    "watch:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QualityUnit/hugo-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/QualityUnit/hugo-boilerplate/issues"
  },
  "homepage": "https://github.com/QualityUnit/hugo-boilerplate#readme",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.17"
  }
}
